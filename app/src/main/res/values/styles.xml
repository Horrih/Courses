<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="spinner_style">
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AutocompletionText">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:background">@drawable/edit_text_style</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:padding">7dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="FloatingButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:scaleType">center</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="backgroundTint">@android:color/background_light</item>
    </style>

    <style name="AddButton" parent="FloatingButton">
        <item name="srcCompat">@android:drawable/ic_input_add</item>
    </style>

    <style name="CustomShowCase" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/backgroundTransparent</item>
        <item name="sv_showcaseColor">@color/colorAccent</item>
        <item name="sv_titleTextAppearance">@style/ShowCaseTitle</item>
    </style>

    <style name="ShowCaseTitle" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginTop">100dp</item>
    </style>
</resources>
