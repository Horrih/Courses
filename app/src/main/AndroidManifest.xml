<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="charles.courses"
    >

    <application
        android:name=".ApplicationWithStorage"
        android:allowBackup="true"
        android:icon="@mipmap/bunny_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bunny_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewTaskActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible"/>
        <activity
            android:name=".SelectItemActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".EditRecipesActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".AddRecipeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>